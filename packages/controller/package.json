{
  "name": "@abb/controller",
  "version": "1.0.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "schema:download": "apollo schema:download --endpoint=http://localhost:4000",
    "codegen:generate": "apollo codegen:generate --queries=./src/**/*.tsx --schema=./schema.json --target=typescript ./schemaTypes.ts",
    "gen:types": "npm run schema:download && npm run codegen:generate",
    "refresh:types": "npm run gen:types && npm run build"
  },
  "dependencies": {
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "react": "^16.4.2",
    "react-apollo": "^2.1.11",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "@types/node": "^10.7.0",
    "@types/react": "^16.4.10",
    "@types/react-dom": "^16.0.7",
    "apollo": "^1.7.0",
    "apollo-codegen": "^0.20.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  }
}
